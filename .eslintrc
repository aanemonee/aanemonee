{
    "extends": "airbnb-base",
    "parser": "@babel/eslint-parser",
    "env": {
        "browser": true
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "no-unused-expressions": ["error", { 
            "allowShortCircuit": true, 
            "allowTernary": true, 
            "allowTaggedTemplates": true 
            }]
    }
}